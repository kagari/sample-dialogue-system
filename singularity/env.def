Bootstrap: docker
From: pytorch/pytorch:1.11.0-cuda11.3-cudnn8-runtime

%post
    apt-get update && apt-get upgrade -y && \
    apt-get install -y vim jq zsh

%post
    conda config --add channels conda-forge
    conda config --remove channels defaults
    conda install mamba
    mamba install -y jupyterlab matplotlib ipywidgets scikit-learn
    mamba install -y transformers sentencepiece
    mamba install -y 'huggingface_hub==0.4.0'

%post
    pip install fugashi[unidic] && python -m unidic download
